    font = "Monospace 8"
    markup = full
    format = "<b>%s</b>\n%b"
    geometry = "200x5-6+30"
    sort = yes
    alignment = center
    show_age_threshold = 60 # TODO
    word_wrap = false
    idle_threshold = 120
    follow = mouse
    padding = 8
    horizontal_padding = 30
    frame_width = 1

    # Xresources background
