 * {{ ansible_managed }}
 * vi: ft=css
 */

* {
    border: none;
    border-radius: 0;
    font-family: "DejaVu Sans Mono";
    font-size: 12px;
    min-height: 0;
}

window#waybar {
    background: transparent;
    color: {{ colors.foreground }};
}

#workspaces button {
    background: {{ colors.background }};
    border: 2px solid {{ colors.background }};
    border-radius: 5px;
    color: {{ colors.foreground }};
    padding: 0px 15px;
    margin: 10px 0px 0px 10px;
}

#workspaces button.visible {
    border: 2px solid {{ colors.primary }};
    color: {{ colors.primary }};
}

#workspaces button:hover {
    border: 2px solid {{ colors.foreground }};
    color: {{ colors.foreground }};
    box-shadow: inherit;
    text-shadow: inherit;
}

#tray, #clock, #battery, #backlight, #bluetooth, #pulseaudio, #network, #custom-bitcoin, #custom-ethereum, #idle_inhibitor, #custom-power {
    background: {{ colors.background }};
    border: 2px solid {{ colors.background }};
    border-radius: 5px;
    color: {{ colors.foreground }};
	margin: 10px 10px 0px 0px;
    padding: 0px 10px;
}

#bluetooth.connected, #bluetooth.on {
    color: {{ colors.blue }};
}

#bluetooth.disabled, #bluetooth.off {
    color: {{ colors.alert }};
}

#backlight {
    color: {{ colors.yellow }};
}

#pulseaudio {
    color: {{ colors.green }};
}

#pulseaudio.muted {
    color: {{ colors.alert }};
}

#battery {
    color: {{ colors.yellow }};
}

#battery.full, battery.charging {
    color: {{ colors.green }};
}

#battery.warning {
    color: {{ colors.alert }};
}

#network {
    color: {{ colors.cyan }};
}

#network.linked, #network.disconnected {
    color: {{ colors.alert }};
}

#idle_inhibitor.activated {
    color: {{ colors.alert }};
}

#idle_inhibitor.deactivated {
    color: {{ colors.green }};
}

#clock {
    color: {{ colors.foreground }};
}
