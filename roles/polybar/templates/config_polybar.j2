[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}

primary = ${xrdb:color8}
secondary = ${xrdb:color0}
alert = ${xrdb:color9}

green = ${xrdb:color2}
cyan = ${xrdb:color6}

[bar/main]
width = 100%
height = 30

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
overline-size = 1

padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = "pango:monospace 8:size=8:antialias=true;0"
font-1 = "Font Awesome 5 Free Solid:size=8:antialias=true;0"
font-2 = "Font Awesome 5 Free Regular:size=8:antialias=true;0"
font-3 = "Font Awesome 5 Brands:size=8:antialias=true;0"

modules-left = i3
modules-center = spotify
modules-right = bitcoin{{ ' backlight' if is_laptop else '' }} volume{{ ' battery' if is_laptop else '' }} date powermenu

tray-position = right
tray-padding = 2
tray-background = ${colors.secondary}

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
index-sort = true
enable-scroll = false

; focused = Active workspace on focused monitor
label-focused = "%index%| %icon%"
label-focused-underline = ${colors.cyan}
label-focused-padding = 3

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-overline = ${colors.cyan}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-overline = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

[module/date]
type = internal/date
interval = 1

date = "%a %d %b"
date-alt = "%a %d-%m-%Y"

time = "%H:%M"
time-alt = "%H:%M:%S"
label = " %date%  %time%"

[module/volume]
type = internal/volume

format-volume = "<ramp-volume> <bar-volume>"

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 

format-muted-foreground = ${colors.alert}
label-muted = " MUTED"

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${self.bar-volume-foreground-0}
bar-volume-foreground-2 = ${self.bar-volume-foreground-0}
bar-volume-foreground-3 = ${self.bar-volume-foreground-0}
bar-volume-foreground-4 = ${self.bar-volume-foreground-0}
bar-volume-foreground-5 = ${self.bar-volume-foreground-0}
bar-volume-foreground-6 = ${self.bar-volume-foreground-0}

bar-volume-indicator = |
bar-volume-indicator-font = 2

bar-volume-fill = ─
bar-volume-fill-font = 2

bar-volume-empty = ${self.bar-volume-fill}
bar-volume-empty-font = 2

{% if is_laptop %}
[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 100

label-charging = "%percentage%"
format-charging = " <animation-charging> <label-charging>%"

label-discharging = "%percentage%"
format-discharging = "<ramp-capacity> <label-discharging>%"

label-full = ""

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}
animation-charging-framerate = 750

[module/backlight]
type = internal/backlight
card = radeon_bl0

label = %percentage%
format = %{A4:light -A 1:} %{A5:light -U 1:}  <label>% %{A} %{A}

{% endif %}
[module/powermenu]
type = custom/menu

expand-right = false

label-open = ""
label-close = ""
label-separator = " | "
label-separator-foreground = ${colors.foreground}

menu-0-0 = " reboot"
menu-0-0-exec = sudo reboot
menu-0-1 = " shutdown"
menu-0-1-exec = sudo shutdown now

[module/spotify]
type = custom/script

label = %output%
format = " <label>"

exec-if = pgrep -x spotify &> /dev/null
exec = spotify_info.py
interval = 1

click-left = i3-msg "workspace 10"

[module/bitcoin]
type = custom/script

label = %output%
format = " <label>"

exec-if = ping -c 1 coinbase.com &> /dev/null
exec = coinbase_usd_checker.py
interval = 60

[settings]
screenchange-reload = true
